extends ../layout/index

block contenido
	main.container.mt-5
		h1.text-center.mb-5 #{pagina}


		.row
			.col-md-12
				blockquote.text-center Lee Sobre Nuestros Clientes y sus Experiencias
				.row.testimoniales
					each testimonial in testimoniales
						.col-md-6.col-lg-4.mb-4
							.card
								.card-body
									blockquote.blockquote
									p.mb-0
										| #{testimonial.mensaje}
									footer.blockquote-footer
										| #{testimonial.nombre}
			.col-md-12
				h2.text-center Agrega un Testimonial
				if(errores)
					each error in errores
						.alert.alert-danger.text-center= error.mensaje
				.row.justify-content-center
					.col-md-8
						form(action="/testimoniales", method="POST")
							.form-group
								label(for="nombre") Nombre
								input(id="nombre" ,class="form-control",placeholder="Tu nombre",type="text", name="nombre",value=nombre)
							.form-group
								label(for="correo") Correo electronico
								input(id="correo" ,class="form-control",placeholder="Tu correo",type="text", name="correo",value=correo)
							.form-group
								label(for="mensaje") mensaje
								textarea#mensaje(class="form-control",placeholder="Tu mensaje",type="text", name="mensaje",value=mensaje)
							input.btn.btn-success.btn-block(type="submit", value="Agregar")